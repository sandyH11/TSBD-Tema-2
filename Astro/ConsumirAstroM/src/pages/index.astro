---
import Layout from "../layouts/Layout.astro";
import { Book, Users } from "lucide-react";
---

<Layout title="Menú">
  <section class="flex flex-col items-center justify-center min-h-[80vh] text-center">
    <h1 class="text-4xl font-bold text-gray-800 mb-10">
      Sistema de Gestión de Microservicios
    </h1>

    <div class="grid grid-cols-1 sm:grid-cols-2 gap-8">
      <!-- Students Option -->
      <a
        href="/students"
        class="bg-blue-600 hover:bg-blue-700 text-white font-semibold px-10 py-8 rounded-2xl shadow-lg transition transform hover:scale-105 flex flex-col items-center"
      >
        <Users size={50} className="mb-3" />
        <span class="text-2xl">Estudiantes</span>
      </a>

      <!-- Courses Option -->
      <a
        href="/courses"
        class="bg-green-600 hover:bg-green-700 text-white font-semibold px-10 py-8 rounded-2xl shadow-lg transition transform hover:scale-105 flex flex-col items-center"
      >
        <Book size={50} className="mb-3" />
        <span class="text-2xl">Cursos</span>
      </a>
    </div>
  </section>
</Layout>